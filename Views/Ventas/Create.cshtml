@model parcial.Models.Venta

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Venta</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehiculoId" class="control-label"></label>
                <select asp-for="VehiculoId" class="form-control" asp-items="ViewBag.VehiculoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalVentas" class="control-label"></label>
                <input asp-for="TotalVentas" class="form-control" />
                <span asp-validation-for="TotalVentas" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-light">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
