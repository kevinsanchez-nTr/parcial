@model IEnumerable<parcial.Models.Marca>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Marcas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nueva marca</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MarcaId" class="btn btn-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.MarcaId" class="btn btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.MarcaId" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
